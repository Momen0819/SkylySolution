@using Skyly.Domain.Entities
@model Hotel

@{
    ViewData["Title"] = "إضافة فندق";
}

<section class="content">
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-12">
                <h4>إضافة فندق جديد</h4>
            </div>
        </div>

        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name">اسم الفندق</label>
                        <input asp-for="Name" name="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address">العنوان</label>
                        <input asp-for="Address" name="Address" class="form-control" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone">رقم الهاتف</label>
                        <input asp-for="Phone" name="Phone" class="form-control" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">البريد الإلكتروني</label>
                        <input asp-for="Email" type="email" name="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CommissionPercentage">نسبة الربح (%)</label>
                        <input asp-for="CommissionPercentage" name="CommissionPercentage" type="number" class="form-control" step="0.01" required />
                        <span asp-validation-for="CommissionPercentage" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> حفظ
                        </button>
                        <a href="@Url.Action("Index", "Hotel")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> إلغاء
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
